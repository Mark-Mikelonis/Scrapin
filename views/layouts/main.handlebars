<!-- Modal -->
<div class="modal fade" id="modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">My Note</h5>
        
        
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <input id="noteTitle" class="mb-2" placeholder="Note Title"></input>
          
        <p ><textarea class="form-control" id="noteBody" style="min-width: 100%"></textarea></p>
      </div>
      <div class="modal-footer">
        <button type="button"  class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button data-id="" type="button" id="saveNote" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>
